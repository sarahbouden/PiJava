<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER"
      spacing="10" fx:controller="com.example.demo.UpdateViewController">

    <Label text="Update Publication" style="-fx-font-size: 18px;"/>

    <VBox spacing="5">
        <Label text="Title:"/>
        <TextField fx:id="titleField" promptText="Enter title"/>
    </VBox>

    <VBox spacing="5">
        <Label text="Description:"/>
        <TextField fx:id="descriptionField" promptText="Enter description"/>
    </VBox>

    <VBox spacing="5">
        <Label text="Image URL:"/>
        <TextField fx:id="imageUrlField" promptText="Enter image URL"/>
    </VBox>

    <!-- Add more input fields as needed -->

    <HBox spacing="10">
        <Button fx:id="saveButton" text="Save" onAction="#saveChanges"/>

        <Button fx:id="cancelButton" text="Cancel" onAction="#cancelAction"/>

    </HBox>

</VBox>
